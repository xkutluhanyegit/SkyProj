@model Web.Models.OrderVM
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Order Kayıt</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-controller="Order" asp-action="Add" method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="col-md-6 float-left border-left border-right">

                <div class="row">
                    <div class="col-6 float-left">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Müşteri</label>
                            <select class="form-control">
                                <option selected value="0">--Müşteri Seçin--</option>
                                @foreach (var item in Model.customers)
                                {
                                    <option value="@item.Id">@item.CustomerName</option>
                                }
                            </select>
                            <span class="text-danger" style="font-size: 12px;"></span>
                        </div>

                    </div>
                    <div class="col-6 float-left">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Marka</label>
                            <select class="form-control">
                                <option selected value="0">--Marka Seçin--</option>
                                @foreach (var item in Model.brands)
                                {
                                    <option value="@item.id">@item.BrandName</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6 float-left">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Model</label>
                            <input type="text" class="form-control" placeholder="Model">
                            <span class="text-danger" style="font-size: 12px;"></span>
                        </div>
                    </div>
                    <div class="col-6 float-left">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Renk veya Boy</label>
                            <input type="text" class="form-control" placeholder="Renk veya Boy">
                            <span class="text-danger" style="font-size: 12px;"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6 float-left">
                        <div class="form-group">
                            <label>Paket Tipi:</label>
                            <select class="form-control">
                                <option selected value="Askı">Askı</option>
                                <option value="Koli">Koli</option>
                            </select>
                            <span class="text-danger" style="font-size: 12px;"></span>

                        </div>
                    </div>
                    <div class="col-6 float-left">
                        <div class="form-group">
                            <label>Yıkama Durumu:</label>
                            <select class="form-control">
                                <option selected value="Yıkamalı">Yıkamalı</option>
                                <option value="Yıkamasız">Yıkamasız</option>
                            </select>
                            <span class="text-danger" style="font-size: 12px;"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md float-left">
                        <div class="form-group">
                            <label>İstenen Sipariş Adet:</label>
