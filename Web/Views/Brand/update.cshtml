@model Entities.Concrete.Brand
<div class="card card-warning">
    <div class="card-header">
        <h3 class="card-title">Marka Güncelleme</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-controller="Brand" asp-action="Update" method="post">
        @Html.HiddenFor(c=>c.id)
        <div class="card-body">
            <div class="form-group">
                <label for="">Marka Ünvanı:</label>
                <input asp-for="@Model.BrandName" type="text" class="form-control" id="" placeholder="Müşteri Ünvanı">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-warning">Güncelle</button>
            </div>

        </div>
        <!-- /.card-body -->

        <div class="card-footer bg-warning">

        </div>
    </form>
</div>